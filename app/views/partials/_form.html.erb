<% name ||="Crear" %> <!-- ESTO INICIALIZA LA VARIABLE NAME Y SI NO TIENE VALOR LE ASINA "Crear" -->
<h2> <%= name %> articulo </h2>

<%= form_for(@article) do  |f| %>

  	<% @article.errors.full_messages.each do |messages| %>
  		<div class="be-red wwhite">
  			*<%= messages%>
  		</div>
  		<%end%>
		<div>
			<%= f.text_field :title, placeholder: "Titulo", class:"search" %>
		</div>
	    </br>
	    <div >
		    <%= f.text_area :body, placeholder: "Escribe aqui el articulo",style:"width:600px", class:"search" %>
		</div>

	    </br>
	    <div>
		    <%= f.submit "Guardar", class:"submit" %>
		</div>
<%end%>